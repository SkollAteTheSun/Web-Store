@model WebStoreCartViewModel
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using System.Globalization;
<div class="container">
    @foreach (var el in Model.webStoreCart.listWebStoreItem)
    {
        <div class="alert alert-warning mt-3">
            <b>Auto</b>@el.car.name<br>
            <b>Price</b>@el.car.price.ToString("C", new CultureInfo("fr_FR"))
        </div>
    }
    <hr>
    <a class="btn btn-danger" asp-controller="Order" asp-action="Checkout">Pay</a>
</div>

